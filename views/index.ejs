<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Input Array</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <h1>Enter Array Elements</h1>
    <form action="/spid" method="POST">
        <div id="array-inputs">
            <input type="text" name="array" placeholder="Enter a value" onfocus="createNewInput(this)">
        </div>
        <button type="submit">Submit</button>
    </form>

    <script>
        function createNewInput(element) {
            const container = document.getElementById('array-inputs');
            const allInputs = container.querySelectorAll('input[type="text"]');

            // Check if the focused input is the last one
            if (element === allInputs[allInputs.length - 1]) {
                const input = document.createElement('input');
                input.type = 'text';
                input.name = 'array';
                input.placeholder = 'Enter a value';
                input.onfocus = function () {
                    createNewInput(this);
                };
                container.appendChild(input);
            }
        }
    </script>
</body>
</html>
